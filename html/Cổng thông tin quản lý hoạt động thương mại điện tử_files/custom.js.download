//Home page buttom search click
function gotoSearch() {
    var text = $('#search-input').val();
    var link = '';
    if ($('#opt-company:checked').length > 0)link = '/CompanyView.aspx';
    if ($('#opt-website:checked').length > 0)link = '/WebsiteViewSearch.aspx';
    if ($('#opt-app:checked').length > 0) link = '/AppViewSearch.aspx';
    window.location = link + '?text=' + text;
    return false;
}

function getURLParameter(name) {
    return decodeURI(
        (RegExp(name + '=' + '(.+?)(&|$)').exec(location.search) || [, null])[1]
    );
};